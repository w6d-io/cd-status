{
  "$id": "https://gitlab.w6d.io/w6d/githubmgt/internal/embedx/config.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "W6D Github management Configuration",
  "type": "object",
  "definitions": {
    "listen": {
      "title": "listen port",
      "type": "string",
      "oneOf": [
        {
          "pattern": "^:(\\d+)$"
        },
        {
          "pattern": "^(\\d{1,3}\\.){3}\\d{1,3}:(\\d+)$"
        },
        {
          "format": "uri"
        }
      ],
      "examples": [
        "127.0.0.1:6831",
        ":4321"
      ]
    },
    "hook": {
      "type": "object",
      "required": ["url", "scope"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "scope": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "listen" : {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "http"
      ],
      "properties": {
        "http": {
          "$ref": "#/definitions/listen"
        }
      }
    },
    "hooks": {
      "type": ["array","null"],
      "items": {
        "$ref": "#/definitions/hook"
      }
    },
    "timeout": {
      "type": "string"
    },
    "auth": {
      "type": ["array","null"],
      "items":  {
        "type": "object",
        "additionalProperties": false,
        "required": ["username"],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}

